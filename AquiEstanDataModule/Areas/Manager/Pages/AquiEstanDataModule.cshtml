@page "~/manager/aquiestandatamodule"
@{
    ViewBag.Title = "AquiEstanDataModule";
    ViewBag.MenuItem = "AquiEstanDataModule";
}

<div id="AquiEstanDataModule">
    <div class="top">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">Content</li>
                <li class="breadcrumb-item active" aria-current="page">Google Data Connector</li>
            </ol>
        </nav>

        <div class="container-fluid">
            <div class="top-nav">
                <button class="btn btn-icon btn-info">
                    <i class="fas fa-cog"></i>
                </button>
                <button class="btn btn-labeled btn-success">
                    <i class="fas fa-check"></i>Cerrar
                </button>
            </div>
        </div>
    </div>
    
    <div class="container-fluid">
        <div class="row">
            <center>
            <h1>Bitácora de sincronización de datos</h1>
            </center>
        </div>
        <table class="table table-borderless">
            <thead>
                <tr>
                    <th>Colectivo</th>
                    <th class="td-medium">Usuario</th>
                    <th class="td-small">Fecha</th>
                    <th class="actions one"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>col sample</td>
                    <td>user sample</td>
                    <td>@DateTime.Now.ToString("yyyy-MM-dd")</td>
                    <td class="actions"><a href="#" class="danger"><i class="fas fa-cloud-download-alt"></i></a></td>
                </tr>
            </tbody>
        </table>

        <div class="card">
            <div class="card-header">
                <span class="title">Form Test</span>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label>Standard input</label>
                    <input type="text" class="form-control" placeholder="Standard text input">
                </div>
            </div>
        </div>
    </div>
</div>
